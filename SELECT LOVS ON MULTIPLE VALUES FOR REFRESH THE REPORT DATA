==================================================
 WHERE 
             PURCHASING_TYPE = NVL(:P121_PURCHASE_TYPE,PURCHASING_TYPE)
        AND  (PAYMENT_MODE_ID IN ( SELECT REGEXP_SUBSTR(:P121_PAYMENT_MODE, '[^:]+', 1, LEVEL) FROM dual CONNECT BY REGEXP_SUBSTR(:P121_PAYMENT_MODE, '[^:]+', 1, LEVEL) IS NOT NULL ) OR :P121_PAYMENT_MODE IS NULL)
        AND  (VENDOR_ID IN ( SELECT REGEXP_SUBSTR(:P121_SUPPLIER_NAMEE, '[^:]+', 1, LEVEL) FROM dual CONNECT BY REGEXP_SUBSTR(:P121_SUPPLIER_NAMEE, '[^:]+', 1, LEVEL) IS NOT NULL ) OR :P121_SUPPLIER_NAMEE IS NULL)
        AND  (AGENCY_ID IN ( SELECT REGEXP_SUBSTR(:P121_AGENCY_NAMEE, '[^:]+', 1, LEVEL) FROM dual CONNECT BY REGEXP_SUBSTR(:P121_AGENCY_NAMEE, '[^:]+', 1, LEVEL) IS NOT NULL ) OR :P121_AGENCY_NAMEE IS NULL)
        AND  (ITEM_ID IN ( SELECT REGEXP_SUBSTR(:P121_PRODUCT_NAMEE, '[^:]+', 1, LEVEL) FROM dual CONNECT BY REGEXP_SUBSTR(:P121_PRODUCT_NAMEE, '[^:]+', 1, LEVEL) IS NOT NULL ) OR :P121_PRODUCT_NAMEE IS NULL)
        AND  (CATEGORY_ID IN ( SELECT REGEXP_SUBSTR(:P121_PRODUCT_CATEGORY, '[^:]+', 1, LEVEL) FROM dual CONNECT BY REGEXP_SUBSTR(:P121_PRODUCT_CATEGORY, '[^:]+', 1, LEVEL) IS NOT NULL ) OR :P121_PRODUCT_CATEGORY IS NULL)
        AND  TRANSACTION_DATE BETWEEN NVL(TO_DATE(:P121_FROM_DATE, 'DD-MON-YYYY'), TRANSACTION_DATE) AND NVL(TO_DATE(:P121_TO_DATE, 'DD-MON-YYYY'), TRANSACTION_DATE)
